<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.administrator.dlwxnongxutong.fragments.UserMesFragment">

        <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/palered"

        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:orientation="horizontal"
            >
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
            <RelativeLayout
                android:id="@+id/rl_sett"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:padding="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
         <ImageView

             android:focusable="true"
             android:id="@+id/iv_setting"
             android:layout_width="@dimen/dimen_40_dip"
             android:layout_height="@dimen/dimen_40_dip"
             android:src="@mipmap/icon_shezhi"

             />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimen_20_dip"
            >

            <com.example.administrator.dlwxnongxutong.views.CircleImageView
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:src="@mipmap/icon_wdtouxiang"
                android:id="@+id/imageView" />

            <TextView
                android:id="@+id/tv_accounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/user_head"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_yue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_yue"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/user_head"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/ll_tixian"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_tixian"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/user_head"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/ll_jifen"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon_wdjifen"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.example.administrator.dlwxnongxutong.views.NoListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_userlist"
        ></com.example.administrator.dlwxnongxutong.views.NoListView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
