<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_15_dip"
            >
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout
                android:padding="@dimen/dimen_5_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="流水号:"
                    android:textColor="@color/textcolor"
                   style="@style/textsize1"
                    />
                <TextView
                    android:id="@+id/tv_orderno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:textColor="@color/textcolor"
                    style="@style/textsize1"
                    />

            </LinearLayout>

                <TextView
                    android:padding="@dimen/dimen_5_dip"
                    android:id="@+id/tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1.00"
                    style="@style/textsize1"
                    android:textColor="@color/red"
                    />
                <LinearLayout
                    android:padding="@dimen/dimen_5_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额"
                        style="@style/textsize1"
                        />
                    <TextView
                        android:id="@+id/tv_yue_money"
                        style="@style/textsize1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        />
                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/textsize1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_15_dip"
                            />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <Button
                    android:id="@+id/btn_issucceed"
                    android:clickable="false"
                    android:layout_width="@dimen/dimen_60_dip"
                    android:layout_height="@dimen/dimen_60_dip"
                    android:text="成功"
                    android:textSize="@dimen/dimen_25_dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_round_red"
                    android:textColor="@color/white"
                    />
                    <ImageView
                        android:layout_width="@dimen/dimen_40_dip"
                        android:layout_height="@dimen/dimen_40_dip"
                        android:src="@mipmap/icon_jiantou"
                        android:layout_marginLeft="@dimen/dimen_8_dip"
                        android:layout_gravity="center_vertical"
                        />
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>