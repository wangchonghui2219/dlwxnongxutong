<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/palered"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="22sp" />

    </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_count"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selete_redobutton_home"
            android:gravity="center"
            android:text="@string/daohang_shouye"
            android:textColor="@drawable/selete_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selete_redobutton_fenlei"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/selete_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_shoppingcat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selete_redobutton_shopcat"
            android:gravity="center"
            android:text="@string/daohang_shopingcat"
            android:textColor="@drawable/selete_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_usermsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selete_redobutton_usermes"
            android:gravity="center"
            android:text="@string/daohang_yonghu"
            android:textColor="@drawable/selete_color"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule" />

</LinearLayout>
